<Window x:Class="Lek07_WPFDataBinding.CreatePersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lek07_WPFDataBinding"
        mc:Ignorable="d"
        Title="Create new person" Height="120" Width="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="nameTxb" Grid.Row="0" Grid.ColumnSpan="2">Name</TextBox>
        <TextBox x:Name="ageTxb" Grid.Row="1" Grid.ColumnSpan="2">Age</TextBox>
        <TextBox x:Name="weightTxb" Grid.Row="2" Grid.ColumnSpan="2">Weight</TextBox>

        <Button x:Name="cancelBtn" Grid.Row="3" Grid.Column="0" Click="CancelBtn_Click">Cancel</Button>
        <Button x:Name="createBtn" Grid.Row="3" Grid.Column="1" Click="CreateBtn_Click">Create person</Button>
    </Grid>
</Window>
